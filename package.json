{
  "name": "readyfun-message-app",
  "version": "0.1.0",
  "private": true,
  "description": "readyfun message app",
  "author": "i33w",
  "main": "public/electron.js",
  "homepage": "https://github.com/i33W/readyfun-message-app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i33W/readyfun-message-app.git"
  },
  "build": {
    "productName": "readyfun app",
    "asar": true,
    "appId": "com.github.i33w.readyfun-message-app",
    "win": {
      "target": "nsis",
      "icon": "./public/logo256.png"
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "oneClick": true,
      "perMachine": true,
      "language": 1042,
      "shortcutName": "readyfun app",
      "include": "./installer.nsh"
    },
    "files": [
      "!.vscode${/*}"
    ],
    "directories": {
      "output": "./dist/"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "i33w",
        "repo": "readyfun-message-app"
      }
    ]
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "start": "concurrently \"cross-env NODE_ENV=development BROWSER=none PORT=9999 npm run react-start\" \"wait-on http://localhost:9999 && electron .\"",
    "build": "npm run react-build && electron-builder",
    "release": "npm run react-build && electron-builder --publish=always"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.68",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "convert-excel-to-json": "^1.7.0",
    "electron-is-dev": "^2.0.0",
    "node-excel-to-json": "^0.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/convert-excel-to-json": "^1.7.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  }
}
